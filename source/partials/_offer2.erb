<section class="offer-two-offers">
  <div class="grid-container">
    <h2 class="offers-package-title"><%= t(:offerTwoPackageTitle) %></h2>
    <article class="offers-package last-child">
        <div class="offers-package-ribbon is-orange text-center"><%= t(:offerDynamicAddonsPretext) %></div>
        <h3 class="offers-package-list-title m-t-2"><%= t(:offerDynamicAddonsTitle) %></h3>
        <input data-appuio-range-slider class="range-slider__range" id="memoryslider" type="range" value="512" min="512" max="20480" step="512">
        <ul class="offers-package-list cols-5">
          <li class="offers-package-item"><%= t(:offerTwoLabelCpu) %>: <span class="cpuvalue"></span></li>
          <li class="offers-package-item"><%= t(:offerTwoLabelMemory) %>: <span class="memoryvalue"></span></li>
        </ul>
        <div class="offers-package-price">
          <h3 class="offers-package-list-title"><%= t(:offerTwoLabelPreis) %></h3>
          <div class="offers-package-table-wrapper">
            <table class="offers-price-table" summary="<%= t(:offerTwoLabelPreis) %>">
              <tbody>
                <tr>
                  <td class="text-right pricevalueperday"></td>
                  <td><%= t(:offerTwoLabelPreisPerDay) %></td>
                </tr>
                <tr>
                  <td class="text-right pricevaluepermonth"></td>
                  <td><%= t(:offerTwoLabelPreisPerMonth) %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="offers-package-dedicated-info">
          <p><%= t(:offerPackageDedicatedInfo) %></p>
        </div>
        <a href="#offers-two-contact" class="button is-round" data-check="interest-order"><%= t(:offerTwoDynamicButton) %></a>
      </article>

      <div class="offers-package-container offers-package-container--offers2">
       <div class="offers-package offers-package--small is-fourth">
          <div class="offers-package-ribbon is-orange">Small</div>
          <ul class="offers-package-list">
            <li class="offers-package-item">Lorem Ipsum</li>
          </ul>
        </div>
        <div class="offers-package offers-package--medium is-fourth">
          <div class="offers-package-ribbon is-orange">Medium</div>
          <ul class="offers-package-list">
            <li class="offers-package-item">Lorem Ipsum</li>
          </ul>
        </div>
        <div class="offers-package offers-package--large is-fourth">
          <div class="offers-package-ribbon is-orange">Large</div>
          <ul class="offers-package-list">
            <li class="offers-package-item">Lorem Ipsum</li>
          </ul>
        </div>
        <div class="offers-package offers-package--x-large is-fourth">
          <div class="offers-package-ribbon is-orange">X-Large</div>
          <ul class="offers-package-list">
            <li class="offers-package-item">Lorem Ipsum</li>
          </ul>
        </div>
      </div>

      <article class="offers-package is-banner-before">
        <p><%= t(:offerTwoCPUDescription) %></p>
      </article>

      <article class="offers-package last-child">
        <div class="offers-package-ribbon is-orange text-center"><%= t(:offerTwoPackageAddonsPretext) %></div>
        <h3 class="offers-package-list-title m-t-2"><%= t(:offerTwoPackageAddonsTitle) %></h3>
        <ul class="offers-package-list cols-5">
          <li class="offers-package-item"><%= t(:offerTwoPersistentStorageAddon) %></li>
        </ul>
      </article>
      <article class="offers-package is-banner-before">
        <p><%= t(:offerTwoStorageDescription) %></p>
      </article>

      <article class="offers-package last-child">
        <div class="offers-package-ribbon is-orange text-center"><%= t(:offerTwoDedicatedAddonsPretext) %></div>
        <h3 class="offers-package-list-title m-t-2"><%= t(:offerTwoDedicatedAddonsTitle) %></h3>
        <ul class="offers-package-list cols-5">
          <li class="offers-package-item"><%= t(:offerTwoDedicatedAddonsItem1) %></li>
          <li class="offers-package-item"><%= t(:offerTwoDedicatedAddonsItem2) %></li>
          <li class="offers-package-item"><%= t(:offerTwoDedicatedAddonsItem3) %></li>
          
        </ul>
        <p><%= t(:offerTwoDedicatedAddonsItem4) %></p>
      </article>
      <article class="offers-package is-banner-before">
        <p><%= t(:offerTwoDedicatedDescription) %></p>
      </article>
    </div>

  </div>
</section>

<section class="offer-two-contents">
  <div class="grid-container">
    <h3 class="offers-package-title"><%= t(:offerTwoPackageContentsTitle) %></h3>
    <article class="offers-package package-contents">
