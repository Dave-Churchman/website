<section class="offer-two offer-two-intro">
  <div class="grid-container">
    <div class="offers-image"><%= image_tag "offer2_big.svg", :alt => t(:offerOneTitle) %></div>
    <h2 class="offers-title"><%= t(:offerTwoTitle) %></h2>
    <p class="offers-intro"><%= t(:offerTwoIntro) %></p>
    <p class="offers-desc">
      <%= t(:offerTwoIso) %>
    </p>
  </div>
</section>

<section class="offer-two-services">
  <div class="grid-container">
    <h3><%= t(:offerTwoServiceTitle) %></h3>
    <div class="offer-container">
      <article class="offer-item is-third">
        <span class="offer-item-image"><%= image_tag "bundles.svg", :alt => t(:offerTwoServices1) %></span>
        <p class="offer-item-desc"><%= t(:offerTwoServices1) %></p>
      </article>
      <article class="offer-item is-third">
