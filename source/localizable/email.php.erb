<?php
  error_reporting(-1);
  ini_set('display_errors', 'On');
  if(isset($_POST['email'])) {
    
    $email_to = "hello@appuio.ch";
    $email_subject = "APPUiO Contact form";
    $email_from = $_POST["email"];
    
    $email_message = "<%= t(:mailGotAMessage) %>\n\n";

    function clean_string($string) {
      $bad = array("content-type","bcc:","to:","cc:","href");
      return str_replace($bad,"",$string);
    }

    $email_message .= "\"".clean_string($_POST["interests"])."\"\n\n";
    $email_message .= clean_string($_POST["message"])."\n\n";
    $email_message .= clean_string($_POST["name"]);

    // create email headers
    $headers = 'From: '.$email_to."\r\n".
    'Reply-To: '.$email_from."\r\n" .
    'Content-type: text/html; charset=UTF-8' . "\r\n" .
    'X-Mailer: PHP/' . phpversion();
    mail($email_to, $email_subject, $email_message, $headers);
  }
?>